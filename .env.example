# Database
# IMPORTANTE: Usar contraseña segura generada con: openssl rand -hex 16
DATABASE_URL="postgresql://dtf_user:GENERATE_SECURE_PASSWORD@localhost:5433/dtf_print_services?schema=public"

# NextAuth (v5 uses AUTH_ prefix)
# IMPORTANTE: Generar con: openssl rand -base64 32
AUTH_URL="https://www.loviprintdtf.es"
AUTH_SECRET="GENERATE_WITH_OPENSSL_RAND_BASE64_32"
# Backwards compatibility (optional)
NEXTAUTH_URL="https://www.loviprintdtf.es"
NEXTAUTH_SECRET="GENERATE_WITH_OPENSSL_RAND_BASE64_32"

# Email Configuration (Hostinger SMTP)
SMTP_HOST="smtp.hostinger.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="info@loviprintdtf.es"
SMTP_PASSWORD="YOUR_SMTP_PASSWORD"
SMTP_FROM="LoviPrintDTF <info@loviprintdtf.es>"

# Cron Jobs (para notificaciones automáticas)
CRON_SECRET="change-this-to-a-random-secret-key"

# File Upload
MAX_FILE_SIZE="52428800" # 50MB in bytes
ALLOWED_FILE_TYPES="image/png,image/jpeg,application/pdf,image/vnd.adobe.photoshop"

# Stripe Configuration
# Obtener de: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE
NEXT_PUBLIC_APP_URL=https://www.loviprintdtf.es

# Cloudinary Configuration (almacenamiento de imágenes)
# Obtener de: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# GLS Shipping Integration
GLS_API_URL=https://api.gls.es
GLS_USER=your-gls-username
GLS_PASSWORD=your-gls-password

# Business Settings (can also be in database)
DEFAULT_PRICE_PER_METER="15.00"
DEFAULT_TAX_RATE="0.21"
DEFAULT_SHIPPING_COST="5.00"
