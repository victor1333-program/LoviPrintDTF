# Database
DATABASE_URL="postgresql://user:password@localhost:5432/dtf_print_services?schema=public"

# NextAuth (v5 uses AUTH_ prefix)
AUTH_URL="http://localhost:3000"
AUTH_SECRET="your-secret-here-change-in-production"
# Backwards compatibility (optional)
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-here-change-in-production"

# Email Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="DTF Print Services <noreply@dtfprint.com>"

# Cron Jobs (para notificaciones autom√°ticas)
CRON_SECRET="change-this-to-a-random-secret-key"

# File Upload
MAX_FILE_SIZE="52428800" # 50MB in bytes
ALLOWED_FILE_TYPES="image/png,image/jpeg,application/pdf,image/vnd.adobe.photoshop"

# Business Settings (can also be in database)
DEFAULT_PRICE_PER_METER="15.00"
DEFAULT_TAX_RATE="0.21"
DEFAULT_SHIPPING_COST="5.00"
